<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewHandCar"
        android:layout_width="295dp"
        android:layout_height="249dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_hand_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSplashOne"
        android:layout_width="292dp"
        android:layout_height="95dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gothamlight"
        android:gravity="center"
        android:text="@string/textViewSplashOne"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHandCar" />

    <ImageView
        android:id="@+id/imageViewRound3_S1"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_rond_1"
        app:layout_constraintStart_toEndOf="@+id/imageViewRound2_S1"
        app:layout_constraintTop_toBottomOf="@+id/textViewSplashOne" />

    <ImageView
        android:id="@+id/imageViewRound1_S1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_rond_2"
        app:layout_constraintStart_toStartOf="@+id/textViewSplashOne"
        app:layout_constraintTop_toBottomOf="@+id/textViewSplashOne" />

    <ImageView
        android:id="@+id/imageViewRound2_S1"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_rond_1"
        app:layout_constraintStart_toEndOf="@+id/imageViewRound1_S1"
        app:layout_constraintTop_toBottomOf="@+id/textViewSplashOne" />

    <TextView
        android:id="@+id/textViewPasserOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/passer"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRound2_S1" />

</androidx.constraintlayout.widget.ConstraintLayout>