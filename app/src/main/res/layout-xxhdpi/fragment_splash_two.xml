<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewKey"
        android:layout_width="324dp"
        android:layout_height="334dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/ic_splash2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSplashTwo"
        android:layout_width="334dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gothambold"
        android:gravity="center"
        android:text="@string/textViewSplashTwo"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewKey" />

    <ImageView
        android:id="@+id/imageViewRound3_S2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_rond_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toEndOf="@+id/imageViewRound2_S2"
        app:layout_constraintTop_toBottomOf="@+id/textViewSplashTwo" />

    <ImageView
        android:id="@+id/imageViewRound1_S2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_rond_1"
        app:layout_constraintStart_toStartOf="@+id/textViewSplashTwo"
        app:layout_constraintTop_toBottomOf="@+id/textViewSplashTwo" />

    <ImageView
        android:id="@+id/imageViewRound2_S2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_rond_2"
        app:layout_constraintStart_toEndOf="@+id/imageViewRound1_S2"
        app:layout_constraintTop_toBottomOf="@+id/textViewSplashTwo" />

    <TextView
        android:id="@+id/textViewPasserTwo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:text="@string/passer"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/gothambold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRound2_S2"
        app:layout_constraintVertical_bias="0.938" />

</androidx.constraintlayout.widget.ConstraintLayout>