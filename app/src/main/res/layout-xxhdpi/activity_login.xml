<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="413dp"
        android:layout_height="434dp"
        android:background="@drawable/ic_yellow_ellipse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <EditText
            android:id="@+id/Email"
            android:layout_width="338dp"
            android:layout_height="56dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/ic_input_background"
            android:drawablePadding="18dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autolib" />

        <EditText
            android:id="@+id/Pass"
            android:layout_width="338dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_input_background"
            android:drawablePadding="18dp"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Email" />

        <ImageView
            android:id="@+id/autolib"
            android:layout_width="175dp"
            android:layout_height="119dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_logo_autolib"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="283dp"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gothamblack"
            android:text="@string/rememberMe"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pass" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="166dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFCB00"
        android:fontFamily="@font/gothamblack"
        android:text="Se connecter"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <TextView
        android:id="@+id/passReset"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/gothamblack"
        android:text="@string/passReset"
        android:textColor="#B7AE81"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/connectButton"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/connectButton"
        app:layout_constraintTop_toBottomOf="@+id/connectButton" />

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gothamblack"
        android:text="@string/createAccount"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/passReset"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/passReset"
        app:layout_constraintTop_toBottomOf="@+id/passReset" />
</androidx.constraintlayout.widget.ConstraintLayout>