<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.activity.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="457dp"
        android:layout_height="420dp"
        android:background="@drawable/ic_yellow_ellipse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/autolib"
            android:layout_width="158dp"
            android:layout_height="92dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_logo_autolib"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rectangle1"
            android:layout_width="376dp"
            android:layout_height="0dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/ic_input_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autolib" />

        <ImageView
            android:id="@+id/rectangle2"
            android:layout_width="376dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_input_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle1" />


        <EditText
            android:id="@+id/Email"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/gothammedium"
            android:hint="Email"
            android:textColorHighlight="#111111"
            app:layout_constraintEnd_toEndOf="@+id/rectangle1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rectangle1"
            app:layout_constraintTop_toTopOf="@+id/rectangle1"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/Pass"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/gothammedium"
            android:background="@android:color/transparent"
            android:hint="@string/pwd"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/rectangle2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/rectangle2"
            app:layout_constraintTop_toBottomOf="@+id/rectangle1"
            tools:ignore="MissingConstraints" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FFCB00"
        android:fontFamily="@font/gothamblack"
        android:text="Se connecter"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <TextView
        android:id="@+id/passReset"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gothamblack"
        android:text="@string/passReset"
        android:textColor="#B7AE81"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/connectButton"
        app:layout_constraintStart_toStartOf="@+id/connectButton"
        app:layout_constraintTop_toBottomOf="@+id/connectButton" />

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="wrap_content"
        android:fontFamily="@font/gothamblack"
        android:layout_height="29dp"
        android:layout_marginTop="20dp"
        android:text="@string/createAccount"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/passReset"
        app:layout_constraintStart_toStartOf="@+id/passReset"
        app:layout_constraintTop_toBottomOf="@+id/passReset" />

</androidx.constraintlayout.widget.ConstraintLayout>